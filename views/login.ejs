<%- include ("partials/header")  %>

<div style="height:100vh" class="container-fluid flex-wrap flex-center flex-middle">
    
        <div class="panel panel-default" style="width: 30%;">
            <div class="panel-heading">
                <h1 align="center" class="panel-title" style="padding: 10px;">Login</h1>
            </div>
            <div class="panel-body">
                
                <form class="form-horizontal submit-form" style="padding: 20px 20px 10px 20px;" action="/login" method="POST">
                    <div class="form-group has-success">
     
                         <input type="text" class="form-control" name="username" placeholder="Username" aria-describedby="helpBlock2">
                    </div>
                    <div class="form-group has-success">
                         
                        <input type="password" class="form-control" placeholder="Password" name="password">
                    </div>
                    <button type="submit" class="btn btn-default" style="width: 100%;">Log in</button>
                    <p style="padding: 10px 0;">Don't have account? <a href='/register'>register now!</a></p>
               </form>
            </div>
        </div>
    </div>



